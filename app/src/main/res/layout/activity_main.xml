<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/purple_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="181dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="220dp"
                android:layout_marginBottom="19dp"
                android:text="trabalho pratico 3"
                android:textColor="#F5FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="21dp"
                android:onClick="settings"
                app:srcCompat="@drawable/ic_baseline_settings_24" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutPrincipal"
            android:layout_width="413dp"
            android:layout_height="729dp"
            android:gravity="center|top"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="56dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="20sp"
                    android:text="Nome: João Silva"
                    android:textSize="20sp" />

                <!--                <TextView-->
                <!--                    android:id="@+id/hora"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:text="Hora: 12:45"-->
                <!--                    android:textSize="20sp" />-->
                <TextClock
                    android:id="@+id/textClockTime"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:format12Hour="hh:mm a"

                    android:timeZone="GMT+01:00"
                    android:paddingEnd="20sp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="206dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/linha"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Alimentação"
                    android:textSize="@dimen/text_size" />

                <LinearLayout
                    android:id="@+id/backGroundAlimentacao"
                    android:layout_width="286dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/linha"
                    android:backgroundTint="@color/green"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="188dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/horaRefeicao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="13:00" />

                        <TextView
                            android:id="@+id/nomeRefeicao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Almoço" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonProximo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="mudarRefeicao"
                        android:text="OK" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancelarButton7"
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:onClick="planoAlimentarView"
                        android:paddingEnd="10sp"
                        android:text="Plano" />

                    <Button
                        android:id="@+id/buttonHistorico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_weight="1"
                        android:onClick="historicoAlimentarView"
                        android:text="Histórico" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="206dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/linha"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Modalidade"
                    android:textSize="@dimen/text_size" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/linha"
                    android:backgroundTint="#4CAF50"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="13:30 Mudar Posição" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OK" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancelarButton"
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:paddingEnd="10sp"
                        android:text="Plano" />

                    <Button
                        android:id="@+id/cancelarButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_weight="1"
                        android:text="Histórico" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


