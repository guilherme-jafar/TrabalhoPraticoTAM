<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Utilizador">

        <EditTextPreference
            app:key="nome"
            app:title="endique o seu nome"
            />

        <ListPreference
            app:defaultValue="15"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="tempo de aviso"
            />

    </PreferenceCategory>


</PreferenceScreen>